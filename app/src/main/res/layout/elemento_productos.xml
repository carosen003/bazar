<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/logo_grupo"
        android:layout_width="116dp"
        android:layout_height="104dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/_14723"
         />

    <TextView
        android:id="@+id/tv_nombre_producto"
        android:layout_width="169dp"
        android:layout_height="91dp"
        android:layout_marginTop="40dp"
        android:padding="8dp"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/logo_grupo"
        tools:text="Nombre Producto" />

    <TextView
        android:id="@+id/tv_precio_producto"
        android:layout_width="169dp"
        android:layout_height="91dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="5dp"
        tools:text="Gs.10.000" />
</LinearLayout>