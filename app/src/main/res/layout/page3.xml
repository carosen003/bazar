<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marco"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/acerca_de_titulo" />

    <TextView
        android:id="@+id/txt_inicio_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/simplycharming"
        android:gravity="center_horizontal"
        android:text="Nuestra Historia"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#9E9E9E"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        android:textSize="17dp"
        android:text="A lo largo de los años, hemos presenciado
una notable evolución en nuestro logo,
 que ha reflejado tanto nuestra transformación
como plataforma de moda como nuestro
compromiso con la innovación. Esta
evolución es un testimonio de nuestro
respeto por nuestra historia y pasión por la
 moda sostenible, al tiempo que nos impulsa
 hacia un futuro emocionante donde nuestro
logo sigue siendo un faro de nuestra visión y
compromiso en la moda.

" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="15dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/acercade_logo"
            android:layout_marginLeft="5dp"
            />
        <ImageView
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:src="@drawable/logoo"
            android:layout_marginLeft="70dp"
            android:layout_marginBottom="100dp"
            />
    </LinearLayout>


</LinearLayout>
