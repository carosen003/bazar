<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/marco"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="270dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:src="@drawable/acerca_de_titulo" />

    <TextView
        android:id="@+id/txt_inicio_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/simplycharming"
        android:gravity="center"
        android:text="Bienvenidos a Bazar"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#9E9E9E"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="19dp"
        android:text="@string/page1"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:src="@drawable/acerca_de_logo"
        android:layout_marginTop="42dp"/>


</LinearLayout>
